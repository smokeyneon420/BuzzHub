<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/eventsCardView"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="7dp"
        android:backgroundTint="#FFFFFF"
        app:cardCornerRadius="7dp"
        app:cardElevation="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/EventImage"
                android:layout_width="117dp"
                android:layout_height="90dp"
                android:layout_marginStart="4dp"
                android:src="@drawable/sportss"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtEventName"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="Event Name"
                android:textColor="#0D0C0C"
                android:textSize="16sp"
                android:textStyle="bold|italic"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/EventImage"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.131" />

            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="62dp"
                android:layout_height="25dp"
                android:layout_marginStart="26dp"
                android:layout_marginEnd="1dp"
                android:text="Price"
                android:textColor="#F40417"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.921"
                app:layout_constraintStart_toEndOf="@+id/EventImage"
                app:layout_constraintTop_toBottomOf="@+id/txtEventDetails"
                app:layout_constraintVertical_bias="0.833" />

            <TextView
                android:id="@+id/txtEventDetails"
                android:layout_width="238dp"
                android:layout_height="36dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="8dp"
                android:text="Event Details"
                app:layout_constraintStart_toEndOf="@+id/EventImage"
                app:layout_constraintTop_toBottomOf="@+id/txtEventName" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>