<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="27dp"
        app:layout_constraintBottom_toTopOf="@+id/signUpButtonHP"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/welcomepicture" />

    <TextView
        android:id="@+id/buzzHubNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="373dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/roboto_bold"
        android:text="BuzzHub"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/welcomeTextViewHP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/welcomeTextViewHP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="108dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Welcome, let's get you buzzing!"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/loginButtonHP"
        app:layout_constraintEnd_toEndOf="@+id/signUpButtonHP"
        app:layout_constraintTop_toBottomOf="@+id/buzzHubNameTextView" />

    <Button
        android:id="@+id/signUpButtonHP"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginStart="55dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#009988"
        android:fontFamily="@font/roboto_bold"
        android:text="Sign Up"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/loginButtonHP"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/loginButtonHP"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginStart="55dp"
        android:layout_marginBottom="31dp"
        android:backgroundTint="#009988"
        android:fontFamily="@font/roboto_bold"
        android:text="Login"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeTextViewHP" />
</androidx.constraintlayout.widget.ConstraintLayout>